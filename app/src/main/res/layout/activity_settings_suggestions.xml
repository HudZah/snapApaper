<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsSuggestions">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:minHeight="?attr/actionBarSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/toolbar">


        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/suggestionicon"
            />

        <TextView
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="24sp"
            android:text="Your Suggestions"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:text="So you have an incredible idea that think could improve snapApaper? Great! Let us know by shooting us an email at snapapaper@gmail.com. We will review each suggestion carefully and decide if we want to implement it or keep it for later."
            android:textSize="15sp"/>


        <Button
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Have An Idea?"
            android:textAllCaps="false"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@color/headings"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:onClick="suggest"
            android:id="@+id/saveChangesButton"
            android:layout_marginBottom="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/headings"
            android:layout_gravity="center_horizontal"
            android:text="A HudZah Production"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher_foreground"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            />

    </LinearLayout>

</RelativeLayout>