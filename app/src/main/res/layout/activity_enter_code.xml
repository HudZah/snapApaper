<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterCodeActivity"
    android:id="@+id/layout">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <TextView
            android:layout_marginLeft="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textSize="30sp"
            android:text="snapApaper"
            android:layout_marginTop="50dp"
            android:textColor="@color/headings"/>



        <TextView
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textSize="26sp"
            android:text="Enter your reset password code"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"/>


    <TextView
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        android:text="An email was sent to your email with a reset code, please type the code here."
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:id="@+id/keyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:maxLength="6"
        android:hint="Reset Code"

        />

    <Button
        android:layout_marginLeft="45dp"
        android:layout_marginTop="40dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Submit Code"
        android:textAllCaps="false"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@color/headings"
        android:textColor="@color/textColor"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/submitCodeButton"
        />

    <TextView
        android:id="@+id/errorTextView"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:text=""/>

</LinearLayout>


</RelativeLayout>