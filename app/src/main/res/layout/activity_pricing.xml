<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PricingActivity">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/headings"
            android:backgroundTint="@color/colorAccent"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />





        <LinearLayout
            android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/image"
                android:layout_below="@id/toolbar"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@drawable/snapapaperbgmdpi"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upgrade your package"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="10dp"
                android:textColor="@color/headings"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="17sp"
                android:textAlignment="center"
                android:layout_marginBottom="30dp"
                android:text="Our app is currently free for everyone with no restrictions or limitations. However in the future we might add certain in-app products to help keep this app afloat\n\nIf you would like support us please contact us a snapapaper@gmail.com"/>




            <LinearLayout
                android:visibility="gone"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewPlus"
                    android:layout_width="match_parent"
                    android:background="@color/textColor"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="0.4"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="true">


                    <Button
                        android:id="@+id/dropdownButtonPlus"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/arrow_bitmap"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="25dp"
                        android:onClick="plusDropdown"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Plus"
                                android:textColor="@color/headings"
                                android:textSize="34sp"
                                android:paddingTop="10dp"
                                android:paddingLeft="12dp"
                                android:fontFamily="sans-serif-medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" (◕△◕✿)"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/headings"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="5dp"/>



                        </LinearLayout>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$0.99/ Month"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginLeft="12dp"
                            android:paddingBottom="10dp"/>




                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/linearPlus"
                        android:visibility="gone"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="100dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="12dp"
                            android:layout_marginBottom="12dp">


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_check_black_24dp"
                                android:layout_gravity="center_vertical"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:paddingLeft="6dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:text="Limit of up to 10 downloads everyday"
                                android:textSize="18sp"
                                android:paddingRight="6dp"
                                android:textColor="@color/black"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="12dp"
                            android:layout_marginBottom="12dp">


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_check_black_24dp"
                                android:layout_gravity="center_vertical"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:paddingLeft="6dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:text="Extended limit up to 60 downloads totally per month"
                                android:textSize="18sp"
                                android:paddingRight="6dp"
                                android:textColor="@color/black"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="12dp"
                            android:layout_marginBottom="12dp">


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_check_black_24dp"
                                android:layout_gravity="center_vertical"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:paddingLeft="6dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:text="Ability to download multiple papers of a year at once!"
                                android:textSize="18sp"
                                android:paddingRight="6dp"
                                android:textColor="@color/black"/>



                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewPremium"
                    android:layout_width="match_parent"
                    android:background="@color/textColor"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="0.4"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:clickable="true"
                    android:onClick="premiumOnClick">


                    <Button
                        android:id="@+id/dropdownButtonPremium"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/arrow_bitmap"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="25dp"
                        android:onClick="premiumDropdown"
                        />


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Premium"
                                android:textColor="@color/headings"
                                android:textSize="34sp"
                                android:paddingTop="10dp"
                                android:paddingLeft="12dp"
                                android:fontFamily="sans-serif-medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" (⊙△⊙)"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/headings"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="5dp"/>



                        </LinearLayout>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$1.99/ Month"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginLeft="12dp"
                            android:paddingBottom="10dp"/>




                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/linearPremium"
                        android:visibility="gone"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="100dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="12dp"
                            android:layout_marginBottom="12dp">


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_check_black_24dp"
                                android:layout_gravity="center_vertical"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:paddingLeft="6dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:paddingRight="6dp"
                                android:text="Even greater limit with up to 20 downloads per day!"
                                android:textSize="18sp"
                                android:textColor="@color/black"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="12dp"
                            android:layout_marginBottom="12dp">


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_check_black_24dp"
                                android:layout_gravity="center_vertical"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:paddingLeft="6dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:text="A limit of 120 downloads totally per month to suit all your needs!"
                                android:textSize="18sp"
                                android:paddingRight="6dp"
                                android:textColor="@color/black"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="12dp"
                            android:layout_marginBottom="12dp">


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_check_black_24dp"
                                android:layout_gravity="center_vertical"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:paddingLeft="6dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:paddingRight="6dp"
                                android:text="Ability to download multiple papers of a year at once!"
                                android:textSize="18sp"
                                android:textColor="@color/black"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="12dp"
                            android:layout_marginBottom="12dp">


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_check_black_24dp"
                                android:layout_gravity="center_vertical"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:text="Ability to download multiple years of papers at once!"
                                android:textSize="18sp"
                                android:textColor="@color/black"/>



                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="10dp"
                android:textColor="@color/headings"
                android:layout_gravity="center_horizontal"
                android:text="A HudZah Production"/>

            <ImageView
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/finallogomdpi"/>


        </LinearLayout>

    </RelativeLayout>

</ScrollView>